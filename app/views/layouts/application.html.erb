<!DOCTYPE html>
<html>
  <head>
    <title>TradingJournalRailsProject</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div align="center"><h1>Trading Journal</h1> </div>

      <nav>
        <h3>
          <%= link_to "Home", root_path %> |
          <% unless trader_signed_in? %>
            <%= link_to("Sign Up", new_trader_registration_path) %> |
            <%= link_to("Log In", new_trader_session_path) %> |
          <% else %>
            <%= link_to "My Trades", trader_trades_path(current_trader) %> |
            <%= link_to "All Trades", trades_path %> |
            <%= link_to "Traders", traders_path %> |
            <%= link_to "Instruments", instruments_path %> |
            <%= link_to "New Trade", new_trade_path %>
            <div align="right"><%= current_trader.email %></div>
          <% end %>
          <div align="right"><%= link_to("Sign out", destroy_trader_session_path, :method => 'delete') if trader_signed_in? %></div>
        </h3>
      </nav>

    <%= yield %>

  </body>
</html>
